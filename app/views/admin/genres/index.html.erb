<div class="row mt-5">
  <div class="col-4 offset-1">
    <h3 class="bg-gray d-inline-block text-center fw-bold px-4">ジャンル一覧・追加</h3>
  </div>
</div>
<div class="mt-5">
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class="row">
      <div class="col-2 fw-bold">
        <%= f.label :name, "ジャンル名" %>
      </div>
      <div class="col-3">
        <%= f.text_field :name, placeholder: "ジャンル名", class: "form-control border-dark" %>
      </div>
      <div class="col-2">
        <%= f.submit '新規登録', class: "form-control btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>