<div class="row mt-5">
  <div class="col-4 offset-1">
    <h3 class="bg-gray d-inline-block text-center fw-bold px-4">商品一覧</h3>
  </div>
  <div class="col-2 offset-5">
    <%= link_to new_admin_item_path do %>
      <i class="fa-solid fa-circle-plus rounded-circle" style="font-size:30px; color:white; background-color:black;"></i>
    <% end %>
  </div>
</div>
<div class="row mt-5">
  <div class="col">
    <table class="table">
      <thead class="bg-light">
        <tr>
          <th scope="col">商品ID</th>
          <th scope="col">商品名</th>
          <th scope="col">税抜価格</th>
          <th scope="col">ジャンル</th>
          <th scope="col">販売ステータス</th>
        </tr>
      </thead>
      <tbody class="border-bottom">
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item) do %>
               <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td class="<%= item.available? ? "text-success" : "text-secondary" %>" style="font-weight:bold;"><%= item.available? ? "販売中" : "販売停止中" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row justify-content-center mt-3">
  <div class="col-3 text-center">
    <%= paginate @items, param_name: 'page' %>
  </div>
</div>