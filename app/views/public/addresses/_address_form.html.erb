<div class="my-5">
  <%= form_with model: address, url: url do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="row mb-3">
      <div class="col-3">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
      </div>
      <div class="col-3">
        <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control border-dark" %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-3">
        <%= f.label :address, "住所" %>
      </div>
      <div class="col-6">
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control border-dark" %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-3">
        <%= f.label :name, "宛名" %>
      </div>
      <div class="col-3">
        <%= f.text_field :name, placeholder: "令和道子", class: "form-control border-dark" %>
      </div>
      <div class="col-2 offset-3">
        <%= render 'submit_button', f: f, submit_label: submit_label %>
      </div>
    </div>
  <% end %>
</div>