<div class="row mt-5">
  <%= render 'genre_search', genres: @genres %>
  <div class="col-10">
    <div class="container">
      <div class="row">
        <div class="col-5">
          <%= image_tag @item.get_image, class: "w-100" %>
        </div>
        <div class="col-7 d-flex align-items-start flex-column">
          <div class="mb-3" style="font-size:1.75rem; font-weight:bold;">
            <%= @item.name %>
          </div>
          <div class="mb-auto">
            <%= simple_format @item.introduction %>
          </div>
          <div>
            <span style="font-size:1.75rem; font-weight:bold;">
              ￥
            </span>
            <span style="font-size:1.75rem; font-weight:bold;">
              <%= @item.price.to_s(:delimited) %>
            </span>
            <span>
              (税込)
            </span>
          </div>
        </div>
      </div>
      <div class="row mt-5">
        <div class="col-7 offset-5">
          <%= form_with model: @cart_item, url: cart_items_path do |f| %>
            <%= f.hidden_field :item_id, :value => @item.id %>
            <%= f.hidden_field :customer_id, :value => current_customer.id %>
            <%= f.select :amount, *[1..10], placeholder: "個数選択" %>
            <%= f.submit "カートに入れる", class: "btn btn-success px-4" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>