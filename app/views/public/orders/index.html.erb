<div class="row mt-5">
  <div class="col-4 offset-1">
    <h3 class="bg-gray d-inline-block text-center fw-bold">注文履歴一覧</h3>
  </div>
</div>
<div class="row mt-5">
  <div class="col">
    <table class="table table-bordered border-dark">
      <thead class="bg-gray">
        <tr>
          <th class="col-2">注文日</th>
          <th class="col-3">配送先</th>
          <th class="col-2">注文商品</th>
          <th class="col-1">支払金額</th>
          <th class="col-2">ステータス</th>
          <th class="col-2">注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class="align-middle"><%= order.created_at.strftime("%Y/%m/%d") %></td>
            <td><%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
            <td>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %><br>
              <% end %>
            </td>
            <td class="align-middle"><%= order.total_payment.to_s(:delimited) %>円</td>
            <td class="align-middle"><%= order.status_i18n %></td>
            <td class="align-middle text-center"><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>